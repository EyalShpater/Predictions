<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>


<StackPane alignment="BOTTOM_RIGHT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="javafx.tab.results.analyze.histogram.property.PropertyChartController">
   <children>
      <BarChart fx:id="histogramBarChart" animated="false" title="End of Simulation Property Histogram">
         <xAxis>
            <CategoryAxis label="Values" side="BOTTOM"/>
         </xAxis>
         <yAxis>
            <NumberAxis label="Amount" side="LEFT"/>
         </yAxis>
      </BarChart>
      <Label fx:id="averageLabel" alignment="CENTER_RIGHT" text="Average: " visible="false">
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </StackPane.margin>
      </Label>
   </children>
</StackPane>
