<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>


<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginController">
    <content>
        <GridPane hgap="3.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                  minWidth="-Infinity" prefHeight="200.0" prefWidth="400.0" vgap="3.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="NEVER"/>
                <RowConstraints maxHeight="40.0" minHeight="20.0" prefHeight="20.0" vgrow="ALWAYS"/>
                <RowConstraints maxHeight="70.0" minHeight="70.0" prefHeight="70.0" vgrow="NEVER"/>
            </rowConstraints>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <children>
                <Label text="User Name:"/>
                <TextField fx:id="userNameTextField" minWidth="50.0" onKeyTyped="#userNameKeyTyped"
                           GridPane.columnIndex="1"/>
                <Label fx:id="errorMessageLabel" prefHeight="17.0" prefWidth="323.0" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
                <HBox alignment="CENTER" prefHeight="103.0" prefWidth="255.0" spacing="15.0" GridPane.columnSpan="2"
                      GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonClicked"
                                prefHeight="45.0" prefWidth="98.0" text="Login"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </content>
</ScrollPane>
