<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="component.details.components.ComponentsController">
    <content>
        <VBox alignment="CENTER_LEFT" cache="true" spacing="3.0">
            <children>
                <Button fx:id="entitiesButton" alignment="TOP_LEFT" graphicTextGap="10.0"
                        maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#entitiesOnAction" text="Entities">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../resources/employee.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="environmentVariablesButton" alignment="TOP_LEFT" graphicTextGap="10.0"
                        maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#environmentVarOnAction" text="Environment Variables">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../resources/environment%20variables.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="rulesButton" alignment="TOP_LEFT" graphicTextGap="10.0"
                        maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#rulesOnAction" text="Rules">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../resources/rules.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="generalButton" alignment="TOP_LEFT" graphicTextGap="10.0"
                        maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#generalOnAction" text="General">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../resources/general.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
        </VBox>
    </content>
</ScrollPane>
